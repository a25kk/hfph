<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:xlink="http://www.w3.org/1999/xlink"
      lang="en"
         metal:use-macro="context/main_template/macros/master"
         i18n:domain="hph.publications">
<body>

<metal:main fill-slot="main">
    <metal:content-core define-macro="main">

        <div class="o-page__content o-grid o-grid--lg o-grid--gutter o-grid--reverse">
            <div class="o-grid__item o-grid__item--width-25">
                <aside class="o-aside" id="c-sidebar"
                         tal:define="subcontents python:context.restrictedTraverse('@@folderListing')(portal_type=['Folder', 'hph.sitecontent.contentpage'])">
                    <div class="c-card c-card--nav c-card--faculty">
                        <div class="c-card__header c-collapsible__header c-collapsible__header--hidden-lg js-collapsible-toggle">
                            <h4 class="c-card__title c-collapsible__link" i18n:translate="">
                                Weitere Inhalte
                            </h4>
                            <div class="c-collapsible__link c-collapsible__link--icon">
                                <svg class="o-icon o-icon--default o-icon--circle o-icon__ui--add-dims c-toc__icon c-toc__icon--open">
                                    <use xlink:href="/assets/symbol/svg/sprite.symbol.svg#ui--add"></use>
                                </svg>
                                <svg class="o-icon o-icon--default o-icon--circle o-icon__ui--remove-dims c-toc__icon c-toc__icon--close">
                                    <use xlink:href="/assets/symbol/svg/sprite.symbol.svg#ui--remove"></use>
                                </svg>
                            </div>
                        </div>
                        <div class="c-card__main c-collapsible__item js-collapsible-item">
                            <ul class="c-nav-list">
                                <li class="c-nav-list__item" tal:condition="context/associatedPublications">
                                    <a class="c-nav-list__link" tal:attributes="href string:${context/absolute_url}/@@publications">
                                        Publikationen</a>
                                </li>
                                <li class="c-nav-list__item c-nav-list__item--active" tal:condition="view/related_courses">
                                    <a class="c-nav-list__link c-nav-list__link--active" tal:attributes="href string:${context/absolute_url}/@@associated-lectures"
                                             i18n:translate="">Lehrveranstaltungen</a>
                                </li>
                                <tal:sub_contents tal:condition="python:subcontents">
                                    <tal:block tal:repeat="item subcontents">
                                        <li class="c-nav-list__item">
                                            <a class="c-nav-list__link" tal:attributes="href item/getURL"
                                                     tal:content="item/Title">Filter option</a>
                                        </li>
                                    </tal:block>
                                </tal:sub_contents>
                            </ul>
                        </div>
                    </div>
                </aside>
            </div>
            <div class="o-grid__item o-grid__item--width-75">
                <header class="o-page__header">
                    <div class="o-page__section o-page__section--header">
                        <div class="c-page-header__title">
                            <h1 class="c-page-header__headline">
                                <span tal:replace="python:context.Title()">
                                    Page Title</span>
                            </h1>
                        </div>
                        <p class="c-page-header__abstract"
                                 tal:define="course_folder python:view.get_current_course_folder()">
                            Lehrveranstaltungen ${course_folder/Title}
                        </p>
                    </div>
                </header>
                <div class="o-page__main">
                    <div class="o-page__section">
                        <div class="c-alert c-alert--default" tal:condition="not:view/related_courses">
                            <h4>Note:</h4>
                            <p>There are no publications available yet</p>
                        </div>
                        <tal:block tal:condition="view/related_courses">
                            <div class="app-content-body">
                                <div class="c-list">
                                    <article class="c-list__item o-separator" tal:repeat="item_uuid view/related_courses">
                                        <div class="c-list__item-details">
                                            <span tal:replace="structure python:view.rendered_course_card(item_uuid)" />
                                        </div>
                                    </article>
                                </div>
                            </div>
                        </tal:block>
                    </div>
                </div>
            </div>
        </div>

    </metal:content-core>
</metal:main>

</body>
</html>

