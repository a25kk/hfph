<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
         metal:use-macro="context/main_template/macros/master"
         i18n:domain="hph.publications">
<body>

<metal:main fill-slot="main">
    <metal:content-core define-macro="main">

        <div class="o-page__content o-grid o-grid--md o-grid--gutter">
            <div class="o-grid__item o-grid__item--width-25">
                <aside class="o-aside" id="c-sidebar"
                    tal:define="subcontents python:context.restrictedTraverse('@@folderListing')(portal_type=['Folder', 'hph.sitecontent.contentpage'])">
                    <div class="c-card c-card-nav c-card--faculty">
                        <div class="c-card__main">
                            <ul class="c-nav-list">
                                <tal:block tal:repeat="filter view/filter_options">
                                    <li class="c-nav-list__item" tal:define="filter_value filter/value"
                                             tal:attributes="class python:view.computed_klass(filter_value)">
                                        <a class="c-nav-list__link"
                                                 tal:attributes="href string:${view/parent_url}?content_filter=1&amp;academicRole=${filter/value}"
                                                 tal:content="filter/title">Filter option</a>
                                    </li>
                                </tal:block>
                            </ul>
                        </div>
                    </div>
                    <div class="c-card c-card--nav c-card--faculty">
                        <div class="c-card__header">
                            <h3 class="c-card__title" tal:content="context/lastname">
                                Additional Information
                            </h3>
                        </div>
                        <div class="c-card__main">
                            <ul class="c-nav-list">
                                <li class="c-nav-list__item" tal:condition="context/associatedPublications">
                                    <a class="c-nav-list__link" tal:attributes="href string:${context/absolute_url}/@@publications">
                                        Publikationen</a>
                                </li>
                                <li class="c-nav-list__item c-nav-list__item-active" tal:condition="view/related_courses">
                                    <a class="c-nav-list__link" tal:attributes="href string:${context/absolute_url}/@@associated-lectures"
                                             i18n:translate="">Lehrveranstaltungen</a>
                                </li>
                                <tal:sub_contents tal:condition="python:subcontents">
                                    <tal:block tal:repeat="item subcontents">
                                        <li class="c-nav-list__item">
                                            <a class="c-nav-list__link" tal:attributes="href item/getURL"
                                                     tal:content="item/Title">Filter option</a>
                                        </li>
                                    </tal:block>
                                </tal:sub_contents>
                            </ul>
                        </div>
                    </div>
                </aside>
            </div>
            <div class="o-grid__item o-grid__item--width-75">
                <header class="o-page__header">
                    <div class="o-page__section o-page__section--header">
                        <div class="c-page-header__title">
                            <h1 class="c-page-header__headline">
                                <span tal:replace="python:context.Title()">
                                    Page Title</span>
                            </h1>
                        </div>
                        <p class="c-page-header__abstract"
                                 tal:define="course_folder python:view.get_current_course_folder()">
                            Lehrveranstaltungen ${course_folder/Title}
                        </p>
                    </div>
                </header>
                <div class="o-page__main">
                    <div class="o-page__section">
                        <div class="c-alert c-alert--default" tal:condition="not:view/related_courses">
                            <h4>Note:</h4>
                            <p>There are no publications available yet</p>
                        </div>
                        <tal:block tal:condition="view/related_courses">
                            <div class="app-content-body">
                                <div class="c-list">
                                    <article class="c-list__item" tal:repeat="item_uuid view/related_courses">
                                        <div class="c-list__item-details">
                                            <span tal:replace="structure python:view.rendered_course_card(item_uuid)" />
                                        </div>
                                    </article>
                                </div>
                            </div>
                        </tal:block>
                    </div>
                </div>
            </div>
        </div>

    </metal:content-core>
</metal:main>

</body>
</html>

