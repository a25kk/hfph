<div class="app-box app-box-faculty">
    <div class="app-box-header">
        <h1 class="app-box-heading" i18n:translate="">
            Teachers
        </h1>
    </div>
    <div class="app-box-content">
        <ul class="nav nav-pills nav-stacked app-box-nav">
            <tal:block tal:repeat="filter view/filter_options">
                <li tal:define="filter_value filter/value;
                                active_filter request/academicRole | nothing;
                                is_active python:active_filter == filter_value"
                    tal:attributes="class python:is_active and 'active' or 'plain'">
                    <a tal:attributes="href string:${context/absolute_url}?content_filter=1&amp;academicRole=${filter/value}"
                        tal:content="filter/title">Filter option</a>
                </li>
            </tal:block>
        </ul>
    </div>
</div>