<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="hph.faculty">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

    <div class="row">
        <div class="col-xs-12 col-lg-3">
            <aside class="app-aside" id="app-sidebar"
                tal:define="subcontents python:context.restrictedTraverse('@@folderListing')(portal_type=['Folder', 'hph.sitecontent.contentpage'])">

                <div class="app-box app-box-faculty">
                    <div class="app-box-header">
                    </div>
                    <div class="app-box-content">
                        <ul class="nav nav-pills nav-stacked app-box-nav">
                            <tal:block tal:repeat="filter view/filter_options">
                                <li tal:define="filter_value filter/value"
                                    tal:attributes="class python:view.computed_klass(filter_value)">
                                    <a tal:attributes="href string:${view/parent_url}?content_filter=1&amp;academicRole=${filter/value}"
                                        tal:content="filter/title">Filter option</a>
                                </li>
                            </tal:block>
                        </ul>
                    </div>
                </div>

                <div class="app-box app-box-faculty"
                    tal:condition="subcontents">
                    <div class="app-box-header">
                        <h3 class="app-box-heading" tal:content="context/lastname">
                            Additional Information
                        </h3>
                    </div>
                    <div class="app-box-content">
                        <ul class="nav nav-pills nav-stacked app-box-nav">
                            <li class="active">
                                <a tal:attributes="href string:${context/absolute_url}/@@publications"
                                    i18n:translate="">Publications</a>
                            </li>
                            <tal:block tal:repeat="item subcontents">
                                <li>
                                    <a tal:attributes="href item/getURL"
                                        tal:content="item/Title">Filter option</a>
                                </li>
                            </tal:block>
                        </ul>
                    </div>
                </div>
            </aside>
        </div>
        <div class="col-xs-12 col-lg-9">
            <article class="tile-content" id="tile-content">
                <header class="page-header">
                    <h1 tal:content="context/Title">Title inserted here</h1>
                </header>

                <section class="page-content" id="content-core">
                <div class="alert alert-warning" tal:condition="not:view/has_publications">
                  <h4>Note:</h4>
                  <p>There are no publications available yet</p>
                </div>

                <tal:block tal:condition="view/has_publications">
                  <div class="app-content-body"
                    tal:define="Batch python:modules['Products.CMFPlone'].Batch;
                                   b_size python:int(request.get('b_size', 20));
                                   b_start python:int(request.get('b_start', 0));
                                   results view/publications;
                                   batch python:Batch(results, b_size, b_start);">
                    <div class="app-list-item" tal:repeat="item batch">
                        <div class="row">
                            <div class="col-xs-12 col-sm-2 col-lg-2">
                                <img tal:condition="item/image"
                                    tal:define="item_obj item/getObject;
                                                 scales item_obj/@@images"
                                    tal:replace="structure python: scales.tag('image',
                                                 width=90,
                                                 height=140,
                                                 css_class='app-img',
                                                 direction='down')"
                                />
                                <div tal:condition="not:item/image">
                                  <div class="no-img"><i class="fa fa-camera fa-3x"></i></div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-10 col-lg-10">
                              <h2 class="h2 list-item-heading">
                                <small>
                                    <span tal:condition="item/authorOne"
                                        tal:replace="item/authorOne" /><span tal:condition="item/authorTwo">,
                                      <span tal:replace="item/authorTwo" /></span><span tal:condition="item/authorThree">,
                                      <span tal:replace="item/authorThree" />
                                    </span>
                                    <span tal:condition="item/authorPlus"
                                        i18n:translate="">a.o.</span>
                                </small>

                                <br />
                                <span tal:replace="item/Title" />
                              </h2>
                              <div tal:condition="item/summary"
                                tal:content="structure item/summary/output" />
                            </div>

                        </div><hr />
                    </div>
                    <div metal:use-macro="context/batch_macros/macros/navigation" />
                  </div>
                </tal:block>
              </section>
            </article>
        </div>
    </div>

  </metal:content-core>
</metal:main>

</body>
</html>

