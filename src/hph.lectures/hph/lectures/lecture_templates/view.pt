<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="hph.lectures">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

    <div class="row">
        <div class="col-xs-12 col-sm-3">
            <aside class="app-aside" id="app-sidebar">
                <div class="app-box app-box-faculty"
                    tal:define="active_filter request/academicRole | nothing">
                    <div class="app-box-header">
                        <h1 class="app-box-heading" i18n:translate="">
                            Lectures
                        </h1>
                    </div>
                    <div class="app-box-content">
                        <ul class="nav nav-pills nav-stacked app-box-nav">
                            <tal:block tal:repeat="filter view/filter_options">
                                <li tal:define="filter_value filter/value"
                                    tal:attributes="class python:view.computed_klass(filter_value)">
                                    <a tal:attributes="href string:${context/absolute_url}?content_filter=1&amp;academicRole=${filter/value}"
                                        tal:content="filter/title">Filter option</a>
                                </li>
                            </tal:block>
                        </ul>
                    </div>
                    <div class="app-box-footer">
                        <a class="btn btn-danger btn-sm" tal:condition="active_filter"
                            tal:attributes="href string:${context/absolute_url}">
                            &times; <span i18n:translate="">remove filter</span></a>
                    </div>
                </div>
            </aside>
        </div>
        <div class="col-xs-12 col-sm-9">
            <article class="tile-content" id="tile-content">
                <header class="page-header">
                    <h1 tal:content="context/Title">Title inserted here</h1>
                </header>
            </article>
            <div class="visualClear" tal:condition="view/can_edit">
                <div class="alert alert-warning">
                    <p i18n:translate="">
                    Since you are signed in as editor you can add file
                    attachments to this news entry</p>
                    <a class="btn btn-default"
                        i18n:translate=""
                        tal:attributes="href string:${context/absolute_url}/++add++File">
                        add attachment</a>
                </div>
            </div>
        </div>
    </div>

  </metal:content-core>
</metal:main>

</body>
</html>

