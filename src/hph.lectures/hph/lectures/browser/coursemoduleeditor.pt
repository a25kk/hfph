<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
         metal:use-macro="context/main_template/macros/master"
         i18n:domain="aha.sitecontent">
<body>

<metal:main fill-slot="main">
    <metal:content-core define-macro="main">
        <div class="app-page-editor">
            <div class="ppe-header">
                <div class="row">
                    <div class="col-xs-12 col-sm-4">
                        <a class="ppe-close pull-left"
                                 tal:attributes="href string:${context/absolute_url}">
                            <i class="ion ion-ios-arrow-back-outline pp-icon pp-icon-md">
                                Quit
                        </a>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <div class="ppe-header-title text-center" i18n:translate="">
                            Course modules
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <a class="ppe-close pull-right"
                                 tal:attributes="href string:${context/absolute_url}/"
                                 i18n:translate="">
                            View
                        </a>
                    </div>
                </div>
            </div>
            <div class="app-module-editor">
                <form class="app-form app-create-form"
                      id="createBlockForm"
                      method="post" role="form"
                         tal:attributes="action string:${context/absolute_url}/@@course-module-add">
                    <div class="row">
                        <div class="col-xs-12 col-md-4">
                            <div class="form-group field"
                                     tal:define="req_value request/title | nothing">
                                <label for="degree" i18n:translate="">Degree</label>
                                <input class="form-control" id="degree"
                                       type="text" name="degree"
                                       placeholder="Enter degree title"
                                         tal:attributes="value req_value">
                            </div> <!-- /title field -->
                        </div>
                        <div class="col-xs-12 col-md-4">
                            <div class="form-group field"
                                     tal:define="req_value request/info | nothing">
                                <label for="info" i18n:translate="">Info</label>
                                <input class="form-control" id="info"
                                       type="text" name="info"
                                       placeholder="Please enter information"
                                         tal:attributes="value req_value">
                            </div> <!-- /title field -->
                        </div>
                        <div class="col-xs-12 col-md-3">
                            <div class="form-group">
                                <span tal:replace="structure context/@@authenticator/authenticator"/>
                                <button class="btn btn-block btn-ppe"
                                        name="form.button.Submit"
                                        id="form.button.Submit">
                                    <i class="ion ion-ios-add-circle-outline pp-icon pp-icon-lg"></i>
                                    <span class="h5" i18n:translate="">Add module</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </metal:content-core>
</metal:main>
</body>
</html>