<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="hph.sitecontent">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

  <section class="container app-content" id="app-content"
    tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime;
                portal_url context/portal_url">
      <div class="row">
        <div class="col-xs-12 col-md-9" id="app-col-content">
            <aside class="app-tile" id="page-content">
                <tal:img tal:condition="context/image">
                    <img tal:define="img view/banner_image"
                        tal:attributes="class string:img-section;
                                        src img/url;
                                        width img/width;
                                        height img/height" />
                </tal:img>
                <img class="img-section"
                    tal:condition="not:context/image"
                    tal:define="portal_url context/portal_url" 
                    tal:attributes="src python:portal_url + '/++theme++hph.corporatetheme/assets/img/banner-dummy.jpg'" />
          </aside>
        </div>
        <div class="col-xs-12 col-md-3" id="app-col-sidebar">

            <aside class="app-tile" id="app-sidebar" >
                <div class="app-box app-box-striped app-box-events">
                    <div class="app-box-header">
                        <h4 class="app-box-heading">
                            <a href="#" tal:define="portal_url context/portal_url"
                                tal:attributes="href python:portal_url + '/termine'">
                                Aktuelle Termine</a>
                        </h4>
                    </div>
                    <div class="app-box-content"
                        data-appui="eventbox"
                        tal:attributes="data-source python:portal_url + '/@@json-eventlist'">
                    </div>
                    <div class="app-box-footer text-right">
                        <a class="btn btn-default btn-sm" href="#"
                            tal:define="portal_url context/portal_url"
                            tal:attributes="href python:portal_url + '/termine'">
                            Weitere Termine
                        </a>
                    </div>
                </div>
            </aside>

        </div>
      </div>
        <div class="app-tile">
            <section class="app-tile app-content-body" id="app-content-body">
            <section class="page">
              <header class="page-header">
                <h1 tal:content="context/Title">Title</h1>
              </header>
              <article class="page-content"> 
                <div class="row">
                  <div class="col-xs-12 col-lg-6">
                    <div tal:attributes="data-tile string:${context/absolute_url}/@@kk.tiles.richtext/block-one" />
                  </div>
                  <div class="col-xs-12 col-lg-6">
                    <div tal:attributes="data-tile string:${context/absolute_url}/@@kk.tiles.richtext/block-two" />
                  </div>
                </div>
              </article>
            </section>
          </section>
        </div>
    </section> <!-- /container app-content -->

    
  </metal:content-core>
</metal:main>

</body>
</html>

