<aside class="c-social-bar"
       xmlns:xlink="http://www.w3.org/1999/xlink"
       i18n:domain="hph.sitecontent">
    <ul class="o-menu c-social-bar__list">
        <li class="c-social-bar__item">
            <a class="c-button c-button--sm c-social-bar__button c-social-bar__button--twitter"
                href="#" tal:attributes="href python:view.share_link(service='twitter')" target="_blank">
                <svg class="o-icon o-icon--size-2 o-icon--spacer o-icon__brand--twitter-dims">
                    <use xlink:href="/assets/symbol/svg/sprite.symbol.svg#brand--twitter"></use>
                </svg>
                <span class="c-social-bar__text" i18n:translate="">tweet</span>
            </a>
        </li>
        <li class="c-social-bar__item">
            <a class="c-button c-button--sm c-social-bar__button c-social-bar__button--facebook"
               href="#" tal:attributes="href python:view.share_link(service='facebook')" target="_blank">
                <svg class="o-icon o-icon--size-2 o-icon--spacer o-icon__brand--facebook-dims">
                    <use xlink:href="/assets/symbol/svg/sprite.symbol.svg#brand--facebook"></use>
                </svg>
                <span class="c-social-bar__text" i18n:translate="">share</span>
            </a>
        </li>
        <li class="c-social-bar__item">
            <a class="c-button c-button--sm c-social-bar__button c-social-bar__button--xing"
               href="#" tal:attributes="href python:view.share_link(service='xing')" target="_blank">
                <svg class="o-icon o-icon--size-2 o-icon--spacer o-icon__brand--xing-dims">
                    <use xlink:href="/assets/symbol/svg/sprite.symbol.svg#brand--xing"></use>
                </svg>
                <span class="c-social-bar__text" i18n:translate="">share</span>
            </a>
        </li>
        <li class="c-social-bar__item">
            <a class="c-button c-button--sm c-social-bar__button c-social-bar__button--linkedin"
               href="#" tal:attributes="href python:view.share_link(service='linkedin')" target="_blank">
                <svg class="o-icon o-icon--size-2 o-icon--spacer o-icon__brand--linkedin-dims">
                    <use xlink:href="/assets/symbol/svg/sprite.symbol.svg#brand--linkedin"></use>
                </svg>
                <span class="c-social-bar__text" i18n:translate="">share</span>
            </a>
        </li>
    </ul>
</aside>