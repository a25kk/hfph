<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="hph.sitecontent">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

  <section id="news-listing" class="tile-content"
    tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime">
    <header class="page-header">
        <h1 tal:content="context/Title" />
    </header>
    <div tal:define="items context/@@folderListing">
        <article tal:repeat="item items">

          <div class="row">
              <div class="col-xs-12 col-sm-2">
                  <img tal:condition="item/image"
                       tal:define="item_obj item/getObject;
                                   scales item_obj/@@images"
                       tal:replace="structure python: scales.tag('image',
                                    width=200,
                                    height=200,
                                    css_class='app-img',
                                    direction='down')" />
              </div>
              <div class="col-xs-12 col-sm-10">                                 
                  <h4><a href="" tal:content="item/Title"
                          tal:attributes="href item/getURL" /></h4>          
                  <p class="muted"
                      tal:define="date item/effective">
                  <span tal:attributes="datetime date"
                      tal:content="python:toLocalizedTime(date)" />
                  </p>
                  <p class="text-discreet" tal:condition="item/Description" 
                                           tal:content="item/Description" />
              </div>
            </div>
          <hr />
        </article>
    </div>
  </section>
    
  </metal:content-core>
</metal:main>

</body>
</html>

