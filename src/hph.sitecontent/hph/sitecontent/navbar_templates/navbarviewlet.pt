<div id="brandbar-sectionname" class="brandbar-sectionname"
    tal:condition="viewlet/show_sectionname"
    tal:define="selected viewlet/selected_section;
                pretty_tab python:viewlet.prettify_section_name(selected)">
    <span tal:content="pretty_tab" />
</div>
<div id="sections">
    <ul id="portal-navigation"
        class="nav navbar-nav nav-justified"
        tal:define="navtree viewlet/main_sections;
                    selected viewlet/selected_section">
        <tal:sections tal:repeat="tab navtree">
            <li tal:define="tab_id tab/id;
                            active python:selected == tab_id;
                            is_last repeat/tab/end"
                tal:attributes="id string:tab-${tab_id};
                                class python:active and 'app-navitem active' or 'app-navitem'">
                <a href="" class="app-navitem-tab"
                    tal:attributes="href tab/url;
                                    class python:is_last and 'app-navitem-tab app-navitem-tab-last' or 'app-navitem-tab'">
                    <span tal:content="tab/name" />
                </a>
            </li>
        </tal:sections>
    </ul>
    <ul id="portal-navigation-base"
        class="app-actionbar-nav app-actionbar-nav-lg"
        tal:define="navtree viewlet/main_sections;
                    selected viewlet/selected_section">
        <tal:sections tal:repeat="tab navtree">
            <li tal:define="tab_id tab/id;
                            active python:selected == tab_id"
                tal:attributes="id string:tab-${tab_id};
                                class python:active and 'app-actionbar-nav-item app-actionbar-nav-item-section active' or 'app-actionbar-nav-item app-actionbar-nav-item-section'">
                <a href="" class="app-actionbar-nav-link"
                    tal:attributes="href tab/url">
                    <span tal:content="tab/name" />
                </a>
            </li>
        </tal:sections>
    </ul>
</div>
<div id="subsections"
    tal:condition="viewlet/has_subsections">
    <ul id="portal-subnavigation"
        class="nav navbar-nav nav-justified"
        tal:define="navtree viewlet/sub_sections">
        <tal:sections tal:repeat="tab viewlet/get_subsections">
            <li tal:define="item tab/item;
                            item_id item/getId;
                            item_title item/Title;
                            item_url item/getURL;
                            selected tab/marker;
                            is_last repeat/tab/end"
                tal:attributes="id string:tab-${item_id};
                                class python:selected and 'app-navitem active' or 'app-navitem'">
                <a href=""
                    class="app-navitem-tab"
                    tal:attributes="href item_url;
                                    class python:is_last and 'app-navitem-tab app-navitem-tab-last' or 'app-navitem-tab'">
                    <span tal:content="item_title" />
                </a>
            </li>
        </tal:sections>
    </ul>
</div>
<div id="subsubsections"
    tal:condition="viewlet/has_subsubsections">
    <ul id="portal-subsubnavigation"
        class="nav nav-pills">
        <tal:sections tal:repeat="tab viewlet/get_subsubsections">
            <li tal:define="item tab/item;
                            item_id item/getId;
                            item_title item/Title;
                            item_url item/getURL;
                            selected tab/marker;
                            is_last repeat/tab/end"
                tal:attributes="id string:tab-${item_id};
                                class python:selected and 'app-navitem app-navitem-sub active' or 'app-navitem app-navitem-sub'">
                <a href=""
                   class="app-navitem-base-tab"
                    tal:attributes="href item_url;
                                    class python:is_last and 'app-navitem-tab-base app-navitem-tab-last' or 'app-navitem-tab-base'">
                    <span tal:content="item_title" /></a>
            </li>
        </tal:sections>
    </ul>
</div>
