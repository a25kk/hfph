<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="hph.sitecontent">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

    <section class="app-page app-content-fp" id="app-content"
        tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime;
                    portal_url context/portal_url">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-9" id="app-col-content">
            <aside class="app-fp-tile" id="app-sidebar-fp">
            <img class="img-section" 
                tal:define="portal_url context/portal_url" 
                tal:attributes="src python:portal_url + '/++theme++hph.corporatetheme/assets/img/hph-muenchen.jpg'" />
          </aside>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3" id="app-col-sidebar">
            <aside class="app-fp-tile" id="app-sidebar" >
                <div class="app-box app-box-striped app-box-events">
                    <div class="app-box-header">
                        <h4 class="app-box-heading">
                            <a href="#" tal:define="portal_url context/portal_url"
                                tal:attributes="href python:portal_url + '/termine'">
                                Aktuelle Termine</a>
                        </h4>
                    </div>
                    <div class="app-box-content" id="app-event-box"
                        data-appui="eventbox"
                        tal:attributes="data-source python:portal_url + '/@@json-eventlist'">
                    </div>
                    <div class="app-box-footer text-right">
                        <a class="btn btn-default btn-sm" href="#"
                            tal:define="portal_url context/portal_url"
                            tal:attributes="href python:portal_url + '/termine'">
                            Weitere Termine
                        </a>
                    </div>
                </div>
            </aside>
        </div>
      </div>
    </section> <!-- /container app-content -->


     <aside class="app-aside" id="app-aside">
        <section class="app-tile app-content-body" id="app-aside-content">
             <article class="app-tile-news-content">
                <div class="row"
                    tal:condition="view/has_news">
                    <tal:block tal:repeat="item view/recent_news">
                      <div class="col-xs-12 col-sm-6 col-lg-3">
                        <div class="app-box app-box-aside app-box-newsitem">
                            <div class="app-box-header">
                                <h4 class="app-box-heading">
                                    <a tal:attributes="href item/getURL"
                                        tal:content="item/Title">App Box Title</a>
                                </h4>
                            </div>
                            <div class="app-box-body">
                                <div class="app-box-item">
                                    <a tal:attributes="href item/getURL">
                                        <img tal:define="img python:view.constructImageTag(item);"
                                            tal:attributes="class string:app-img;
                                                            src img/url;
                                                            width img/width;
                                                            height img/height" />
                                    </a>
                                    <p class="text-discreet" tal:content="item/Description" />
                                </div>
                            </div>
                            <div class="app-box-footer text-right">
                                <a tal:attributes="href item/getURL">
                                    <i class="icon-double-angle-right"></i>
                                </a>
                            </div>
                        </div>                        
                      </div>
                    </tal:block>
                </div>
            </article>
      </section>
    </aside>

  </metal:content-core>
</metal:main>

</body>
</html>

