<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="hph.sitecontent">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

  <section id="frontpage"
    tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime;">
    <div class="row-fluid">
      <div class="span9">
        <div id="main-content">
          <section id="frontpage-content" class="panel">
            <header class="page-header">
              <h1 tal:content="context/Title">Title</h1>
            </header>
            <article>
              <img class="img-polaroid" 
                tal:define="portal_url context/portal_url" 
                tal:attributes="src python:portal_url + '/++theme++hph.corporatetheme/img/banner-dummy.jpg'" />
            </article>
          </section>
        </div>
      </div>
      <div class="span3">
        <aside id="sidebar" class="panel">
          <div class="box">
            <h4>Aktuelle Termine</h4>
            <tal:eventlist tal:condition="view/has_events">
              <section tal:define="items view/eventitems"
                class="box-content">
                <div class="box-item" tal:repeat="item items">
                  <h5 tal:define="startdate item/start">
                    <a href=""
                      tal:attributes="href item/getURL">
                      <span tal:replace="python:toLocalizedTime(startdate)" />
                    </a>
                  </h5>
                  <p class="muted" tal:content="item/Title">
                    Description of the item</p>
                  <a href="" class="link-more pull-right"
                    tal:attributes="href item/getURL">
                    &raquo;</a>
                </div>
              </section>
            </tal:eventlist>
            <a href="" class="btn pull-right"
              tal:define="portal_url context/portal_url"
              tal:attributes="href python:portal_url + '/termine'">
              Weitere Termine</a>
          </div>
        </aside>
      </div>
    </div>
    <div class="panel panel-news">
      <section class="row-fluid"
        tal:condition="view/has_news">
        <tal:block tal:repeat="item view/recent_news">
          <div class="span3">
            <section class="box">
              <header class="box-header">
                <h5 tal:content="item/Title" />
              </header>
              <img tal:define="img python:view.constructImageTag(item);"
                tal:attributes="src img/url;
                                width img/width;
                                height img/height" />
              <p tal:content="item/Description" />
              <a href="" class="link-more pull-right"
                tal:attributes="href item/getURL">&raquo;</a>
            </section>
          </div>
        </tal:block>
      </section>
    </div>
  </section>
  </metal:content-core>
</metal:main>

</body>
</html>

