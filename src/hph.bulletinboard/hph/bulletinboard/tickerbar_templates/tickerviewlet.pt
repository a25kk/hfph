<div id="tickerbar"
    class="navbar navbar-static-top"
    tal:condition="viewlet/available"
    tal:define="portal_url context/portal_url">
    <div class="navbar-inner"
        id="bulletin-ticker"
        data-appui="tickerfeed"
        data-appui-placeholder="#bulletins"
        tal:attributes="data-appui-source python:portal_url + '/schwarzes-brett/@@bulletins'">
        <div id="bulletins" class="container"
            tal:define="items viewlet/active_bulletins">
            <tal:block tal:repeat="item items">
                <div id="bulletin">
                <p><i class="icon-warning-sign"></i>
                   <span tal:replace="item/Title" />
                </p>
                </div>
            </tal:block>
        </div>
        <div id="ticker-tabs">
            <tal:tabnav tal:repeat="tab viewlet/active_bulletins">
                <a href="#"
                    tal:define="tab_id tab/getId;"
                    tal:attributes="href python:'#' + tab_id"></a>
            </tal:tabnav>
        </div>
    </div>
</div>