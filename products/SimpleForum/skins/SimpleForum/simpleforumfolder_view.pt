<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="simpleforum">
<head></head>
<body>
<metal:main fill-slot="main">
  <tal:main-macro metal:define-macro="main"
                  tal:define="forum_items here/getForumItems">
    <h1 tal:content="here/title_or_id" />
  
    <a href=""
       class="link-parent"
       i18n:domain="plone"
       tal:define="parent_url python:here.navigationParent(here, template.getId())"
       tal:condition="parent_url"
       tal:attributes="href parent_url"
       i18n:translate="go_to_parent_url">
    Up one level
    </a>
    
    <div class="documentDescription"
         tal:content="here/Description" />
    
    <table class="listing"
           style="width: 100%"
           tal:condition="forum_items">
      <thead>
        <tr>
          <th i18n:translate="label_forum"
              class="nosort">Forum</th>
          <th i18n:translate="label_topics"
              class="nosort">Topics</th>
          <th i18n:translate="label_posts"
              class="nosort">Posts</th>
          <th i18n:translate="label_last_post"
              class="nosort">Last post</th>
        </tr>
      </thead>
      <tbody>
        <tal:block tal:repeat="item forum_items">
          <tr tal:define="title item/title;
                          url item/url;
                          description item/description;
                          topics_count item/topics_count;
                          posts_count item/posts_count;
                          last_post_title item/last_post_title;
                          last_post_url item/last_post_url;">
            <td>
              <h5>
                <a tal:attributes="href url">
                  <span tal:content="title" />
                </a>
              </h5>
              <tal:block tal:condition="python:len(description) > 0">
                <p tal:content="description" />
              </tal:block>
            </td>
            <td>
              <span tal:content="topics_count" />
            </td>
            <td>
              <span tal:content="posts_count" />
            </td>
            <td>
              <a tal:attributes="href last_post_url">
                <span tal:content="last_post_title" />
              </a>
            </td>
          </tr>
        </tal:block>
      </tbody>
    </table>
  </tal:main-macro>
</metal:main>
</body>
</html>
